# SupplyMind Environment Variables
# Copy this to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/dbname

# =============================================================================
# AZURE OPENAI (Required for agents)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# MCP SERVER URLs
# =============================================================================
# For LOCAL DEVELOPMENT (Docker Compose uses internal network):
# These defaults work with docker-compose - no need to change
MCP_SUPPLIER_URL=http://supplier-data:3001
MCP_INVENTORY_URL=http://inventory-mgmt:3002
MCP_FINANCE_URL=http://finance-data:3003
MCP_ANALYTICS_URL=http://analytics-forecast:3004
MCP_INTEGRATIONS_URL=http://integrations:3005

# For AZURE PRODUCTION (after deploying MCP servers):
# Uncomment and update with your Azure Container Apps URLs
# MCP_SUPPLIER_URL=https://mcp-supplier-data.purplepebble-8d2a2163.eastus.azurecontainerapps.io
# MCP_INVENTORY_URL=https://mcp-inventory-mgmt.purplepebble-8d2a2163.eastus.azurecontainerapps.io
# MCP_FINANCE_URL=https://mcp-finance-data.purplepebble-8d2a2163.eastus.azurecontainerapps.io
# MCP_ANALYTICS_URL=https://mcp-analytics-forecast.purplepebble-8d2a2163.eastus.azurecontainerapps.io
# MCP_INTEGRATIONS_URL=https://mcp-integrations.purplepebble-8d2a2163.eastus.azurecontainerapps.io

# =============================================================================
# FRONTEND CONFIGURATION (for Vercel/Azure SWA)
# =============================================================================
# This is the URL your frontend uses to call the backend API
# For local development: http://localhost:8000
# For production: Your Azure Container Apps backend URL
NEXT_PUBLIC_API_URL=http://localhost:8000
