# Supply Chain Agents Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Azure OpenAI Configuration (Required for agents)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# =============================================================================
# MCP Server URLs (Supply Chain Services)
# =============================================================================
# These should point to your MCP servers that expose /mcp endpoints
MCP_SUPPLIER_URL=http://supplier-data-server:8000
MCP_INVENTORY_URL=http://inventory-mgmt-server:8001
MCP_FINANCE_URL=http://finance-data-server:8002
MCP_ANALYTICS_URL=http://analytics-forecast-server:8003
MCP_INTEGRATIONS_URL=http://integrations-server:8004

# =============================================================================
# Database Configuration (Existing)
# =============================================================================
DATABASE_URL=postgresql://user:password@host:5432/database

# =============================================================================
# Server Configuration
# =============================================================================
PORT=8000
LOG_LEVEL=INFO
